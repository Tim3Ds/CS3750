@model IEnumerable<WebApplication1.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h4>Categories</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="line-separator"></div>

<table class="table">
    <tr>
        <th>
            <h2>Category Name</h2>
        </th>
        <th>
            <h4>Date</h4>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.categoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastChangedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.category_id }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.category_id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.category_id })
            </td>
        </tr>
    }

</table>
